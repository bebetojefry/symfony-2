{% extends "AppFrontBundle::layout.html.twig" %}

{% block title %}{{ 'page_title.login' | trans }}{% endblock %}

{% block styleseet %}
    
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'login.headline' | trans }}</h3>
                </div>
                <div class="panel-body">
                    <form role="form" name="frmlogin" id="frmlogin" method="POST" action="{{ path('app_front_login_check') }}">
                        <fieldset>
                            <div class="form-group">
                                <input type="text" name="_username" id="username" class="form-control" placeholder="{{ 'login.username' | trans }}" value="{{ last_username }}" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="password" name="_password" id="password" class="form-control" placeholder="{{ 'login.password' | trans }}" >
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input checked="" name="_remember_me" type="checkbox" value="Remember Me">{{ 'login.remember_me' | trans }}
                                </label>
                            </div>
                            {% set errors = app.session.flashbag.get('login_error') %}
                            {% if errors|length > 0%}
                                <div class="messages">
                                    {% for flashMessage in errors %}
                                        <span>{{ flashMessage | trans }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                            <input type="submit" name="submit" value="Login" class="btn btn-lg btn-success btn-block" />
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock%}

