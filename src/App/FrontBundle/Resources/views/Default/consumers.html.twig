{% extends "AppFrontBundle::layout2.html.twig" %}

{% block title %}{{ 'page_title.login' | trans }}{% endblock %}

{% block style %}
    {% stylesheets
        'assets/vendor/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css'
        filter='cssrewrite' output='css/compiled/page.css' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Consumers
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="consumersTable">
                            <thead>
                                <tr>
                                    <th>{{ 'user.slno' | trans }}</th>
                                    <th>{{ 'user.firstname' | trans }}</th>
                                    <th>{{ 'user.lastname' | trans }}</th>
                                    <th>{{ 'user.gender' | trans }}</th>
                                    <th>{{ 'user.phone' | trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for consumer in consumers %}
                                    <tr class="{% if loop.index0%2 == 0 %}even{% else %}odd{% endif %} gradeX">
                                        <td>{{ loop.index0+1 }}</td>
                                        <td>{{ consumer.firstname }}</td>
                                        <td>{{ consumer.lastname }}</td>
                                        <td>{% if consumer.gender == 1 %}Male{% else %}Female{% endif %}</td>
                                        <td>{{ consumer.phone }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock%}

{% block javascript %}
    {% javascripts
        'assets/vendor/datatables/media/js/jquery.dataTables.min.js'
        'assets/vendor/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js'
        output='js/compiled/page.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#consumersTable').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}
